@page "/water"
@using Newtonsoft.Json
@using NutritionFitnessJeremiah.Data

<h3>Drink Water</h3>
<p>you drank @prevAmount glass of water yesterday</p>
<button class="btn btn-info" @onclick="TakeWater">drink 1 glass of water</button>

@code {
    private string filePath = "water_tracker.json";
    private string currentDate = DateTime.Now.ToString("yyyy-MM-dd");
    private string prevDate = DateTime.Now.AddDays(-1).ToString("yyyy-MM-dd");
    private int prevAmount = 0;
    private WaterTracker waterTracker;

    protected override void OnInitialized()
    {
        if (File.Exists(filePath))
        {
            string json = File.ReadAllText(filePath);
            waterTracker = JsonConvert.DeserializeObject<WaterTracker>(json);
            if (waterTracker.WaterData.ContainsKey(prevDate))
            {
                prevAmount = waterTracker.WaterData[prevDate].Amount;
            }
        }
        else
        {
            waterTracker = new WaterTracker();
        }
    }

    private void TakeWater()
    {
        if (waterTracker.WaterData.ContainsKey(currentDate))
        {
            waterTracker.WaterData[currentDate].Amount++;
        }
        else
        {
            waterTracker.WaterData[currentDate] = new WaterIntake { Amount = 1 };
        }

        // Save data back to the file
        string updatedJson = JsonConvert.SerializeObject(waterTracker, Formatting.Indented);
        File.WriteAllText(filePath, updatedJson);

        Console.WriteLine("Water intake updated.");
    }

}
